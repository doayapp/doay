{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Doay",
  "version": "1.0.0",
  "identifier": "doay",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": [
      "ray/*"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/64x64.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "languages": [
          "simpchinese"
        ]
      }
    }
  }
}
